/* index.wxss */
@import "../../../dist/css/weui.wxss";

view {
  text-align: center;
}
.header {
  text-align: center;
}

.tags-container, .header, .tag, .poem, .poems-container {
  width: 99.5%;
  border-right: 0px;
  padding: 0px;
}

.tag-name {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  padding-left: 40rpx;
  text-align: left;
}

.poem {
  /*padding: 20rpx 0px;*/
}

.poem text {
  /*padding: 20rpx;*/
  width: 25%;
  display: inline-block;
  text-align: center;
  line-height: 100rpx;
}

.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 34rpx;
  transform: translateY(-50%);
  transition: 0.3s;
}

.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}

.navigator {
  /*padding: 20rpx 30rpx;*/
  position: relative;
  display: flex;
  align-items: center;
}

.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #d8d8d8;
  color: #d8d8d8;
}

.navigator:first-child:before {
  display: none;
}

.navigator-text {
  flex: 1;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.navigator, .control {
  display: flex;
}

.control {
  background-color: red;
  width: 100rpx;
  /*margin-right: -200rpx;*/
  position: absolute;
  top: 0px;
  right: 100rpx;
  justify-content: center;
}

.control text {
  width: 100%;
}
.weui-grid__label  {
  margin-top: 0rpx;
}
